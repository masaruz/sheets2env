{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist",
        "types": [
            "node",
            "jest"
        ],
    },
    "include": [
        "src/**/*",
        "__tests__/service.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}