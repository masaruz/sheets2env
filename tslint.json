{
    "extends": [
        "tslint:latest",
        "tslint-config-prettier"
    ],
    "rules": {
        "semicolon": [
            true,
            "never"
        ],
        "quotemark": [
            true,
            "single"
        ]
    },
    "linterOptions": {
        "exclude": [
            "dist/**/*",
            "node_modules/**/*",
            "__tests__/**/*"
        ]
    }
}